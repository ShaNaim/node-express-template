{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"  
    },
    "plugins": [
      "node",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": ["error", { "args": "after-used", "vars": "all", "ignoreRestSiblings": true }],
      "no-unused-imports": "error",
      "no-undef": "error",
      "no-redeclare": "error",
      "node/no-unpublished-require": "error",
      "node/no-unsupported-features/es-syntax": "off",
      "prettier/prettier": "error",
      "eqeqeq": ["error", "always"],
      "consistent-return": "error",
      "camelcase": "error",
      "no-trailing-spaces": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 2],
      "no-console": ["warn", { "allow": ["warn", "error"] }]
    }
  }
  